//- mixin for correct code parsing in jade
mixin htmlEscape()
    - var prevBuf = buf;
    - buf = []
    - block()
    - var blockResult = buf.join('');
    - buf = prevBuf;
    = blockResult
//- include article mixin to generate content
include ../modules/article

doctype html
